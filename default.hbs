<!DOCTYPE html>
<html>
<head>

	<meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{{meta_title}}</title>
	<meta name="description" content="{{meta_description}}" />
	<!-- FB Open Graph -->
	<meta property="og:locale" content="en_US" />
	<meta property="og:site_name" content="{{meta_title}}" />
	<meta property="fb:admins" content="611546862" />
	{{#post}}
	<meta property="og:type" content="article" />
	<meta property="og:title" content="{{title}}" />
	<meta property="og:url" content="{{url absolute='true'}}" />
	<meta property="og:description" content="{{excerpt}}&hellip;" />
	{{/post}}
	<!-- Google Authorship -->
	<link rel="author" href="https://plus.google.com/114947731091250999907" title="Jeremy Herve on Google+" /> 
	<!-- Twitter Cards -->
	<meta name="twitter:site" content="@jeherve" />
	{{#post}}
	<meta name="twitter:card" content="summary" />
	{{/post}}

	<meta name="viewport" content="width=device-width">

	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<link rel="shortcut icon" href="/assets/img/favicon.png" />
	<link href="/assets/css/style.css" rel="stylesheet" />

	<script src="/assets/js/highlight.pack.js"></script>
	<script>hljs.initHighlightingOnLoad();</script>

	{{ghost_head}}

</head>
<body class="{{body_class}}">

{{#if @blog.cover}}
	<div id="coverimg" style="background-image: url({{@blog.cover}})"></div>
{{/if}}

	<div id="page">

		<div id="sidebar">
		{{#if author}}
			<div class="bio">
				<a href="/"><img class="avatar" src="{{author.image}}" /></a>
				<h3>{{author.name}}</h3>
				<p>{{author.bio}}</p>
			</div><!-- .bio -->
		{{/if}}

			<nav>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="http://twitter.com/jeherve">Twitter</a></li>
					<li><a href="http://jeremyherve.com/">Personal blog</a></li>
					<li><a href="/rss/">RSS</a></li>
				</ul>
			</nav>
		</div><!-- .sidebar -->

		<div id="content">
			{{{body}}}
		</div><!-- #content -->

	</div><!-- #page -->

	<footer id="footer">
		<p class="copyright">Copyright &copy; 2013 {{@blog.title}}.</p>
	</footer>

	{{ghost_foot}}

	<script src="/assets/js/jquery.mobilemenu.min.js"></script>
	<script>
		$(document).ready(function(){
			$('#sidebar nav ul').mobileMenu({'topOptionText': 'Menu', 'prependTo': '#sidebar nav'});
		});
	</script>
</body>
</html>