{{!< default}}

{{#post}}
<article class="{{post_class}}">

	<h1><a href="{{ url absolute="true" }}">{{ title }}</a></h1>

	<div class="post-content">{{ content }}</div>

	<p class="meta">{{tags separator=", "}} | Posted on <span class="postdate">{{date format="MMM Do, YYYY"}}</span></p>

	<!-- Google+ Comments -->
	<section class="comments">
	        <div id="post_{{id}}_comments"></div>
	        <script>
	        	(function () {
	        		var c = document.getElementById('post_{{id}}_comments'),
	        		w = c.offsetWidth;
	        		c.innerHTML = '<div class="g-comments" data-href="{{@blog.url}}{{url}}" data-width="' + w + '" data-first_party_property="BLOGGER" data-view_type="FILTERED_POSTMOD">Loading Google+ Comments ...</div>';
	        	})();
	        </script>
	</section>

</article>
{{/post}}
