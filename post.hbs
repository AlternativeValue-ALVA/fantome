{{!< default}}

{{#post}}
<article class="{{post_class}}">

	<h1><a href="{{ url absolute="true" }}">{{ title }}</a></h1>

	<div class="post-content">{{ content }}</div>

	<p class="meta">{{tags separator=", "}} | Posted on <span class="postdate">{{date format="MMM Do, YYYY"}}</span></p>

	<section class="comments">
		<h3 class="blog-feedback-header with-twitter">
			Have feedback on this post? Let <a href="https://twitter.com/intent/tweet?text=@jeherve%20&related=jeherve&url={{ url absolute="true" }}" target="_blank">@jeherve</a> know on Twitter.
		</h3>
		<p class="blog-feedback-description">
			You can also <a href="http://jeremyherve.com/contact/" target="_blank">contact me via email</a>.
		</p>
	</section>

</article>
{{/post}}
